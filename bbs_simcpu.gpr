with "config/bbs_simcpu_config.gpr";

library project bbs_simcpu is

   for Languages use ("Ada");
   for Library_Name use "bbs_simcpu";
   for Source_Dirs use ("src", "src/example", "src/bus", "src/io", "src/i8080", "src/m68000", "src/msc6502");
   for Object_Dir use "obj";
   for Library_Dir use "lib";
   package builder is
      for switches ("Ada") use ("-s");
   end builder;
   package compiler is
      for switches ("Ada") use ("-g", "-gnateE", "-gnata");
   end compiler;
end bbs_simcpu;
